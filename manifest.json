{
  "name": "Web Cat Tamer",
  "description": "Review your previously submitted webcat homeworks in a beautiful and convient way.",
  "version": "1.0",

  "permissions": [
    "https://web-cat.ccs.neu.edu/*",
    "activeTab",
    "storage"
  ],

  "options_page": "app/index.html",

  "browser_action": { "default_icon": "wc-tamer-logo.png" },
  "background": { "scripts": ["background.js"] },

  
  "content_scripts": [
    {
      "matches": [
        "https://web-cat.ccs.neu.edu/*"
      ],
      "js": [
        "inject.js"
      ]
    }
  ],

  "manifest_version": 2
}
